    <setting>
      <conf_title>Shout refresh rate</conf_title>
      <conf_description><![CDATA[The amount of time to refresh the shoutbox shouts (in seconds).<br />
<strong style='color: red;'>NOTE: Due to resource issues, you cannot set this any lower than 30 seconds.</strong>]]></conf_description>
      <conf_group>111</conf_group>
      <conf_type>input</conf_type>
      <conf_key>shoutbox_shouts_refresh</conf_key>
      <conf_default>60</conf_default>
      <conf_extra/>
      <conf_evalphp><![CDATA[if ( $save == 1 )
{
	if ( intval( $_POST['shoutbox_shouts_refresh'] ) < 30 )
	{
		$value = 30;
	}
}]]></conf_evalphp>
      <conf_protected>1</conf_protected>
      <conf_position>1</conf_position>
      <conf_start_group>Ajax Refresh Settings</conf_start_group>
      <conf_add_cache>1</conf_add_cache>
      <conf_keywords/>
      <conf_title_keyword>shoutbox_refresh</conf_title_keyword>
